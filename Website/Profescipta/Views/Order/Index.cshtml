@model List<App.Domain.SoOrder>
@{
}
<div>
    <div>
        <a asp-action="Add" asp-controller="Order" class="btn btn-primary"><i class="bi bi-plus-lg"></i> Add Sales Order</a>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Action</th>
                    <th scope="col">Sales Order No</th>
                    <th scope="col">Order Date</th>
                    <th scope="col">Customer</th>
                </tr>
            </thead>
            <tbody>
                @if(Model != null)
                {
                    @foreach (App.Domain.SoOrder item in Model)
                    {
                        <tr>
                            <th scope="row">
                                <a class="btn btn-success" asp-action="Edit" asp-controller="Order" asp-route-id="@item.SoOrderId"><i class="bi bi-pencil-square"></i></a>
                                <a class="btn btn-danger" asp-action="Delete" asp-controller="Order" asp-route-id="@item.SoOrderId" onclick="confirm('are you sure?')"><i class="bi bi-trash"></i></a>
                            </th>
                            <td>@item.OrderNo</td>
                            <td>@item.OrderDate.ToString("dd-MMM-yyyy")</td>
                            <td>@item._ComCustomerName</td>
                        </tr>
                    }
                }
                else{
                    <tr>
                        <td colspan="4">no data</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>