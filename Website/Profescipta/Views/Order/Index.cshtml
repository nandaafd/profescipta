@model List<App.Domain.SoOrder>
@{
}
<div>
    <div>
        <form asp-action="Index" method="post">
            <div class="row mb-3">
                    <div class="col-lg-5 col-md-5 col-sm-12">
                        <div class="input-group">
                            <label class="form-label me-3">Order No</label>
                            <input type="text" name="searchText" class="form-control" value="@ViewBag.searchText" />
                        </div>
                    </div>
                    <div class="col-lg-5 col-md-5 col-sm-12">
                        <div class="input-group">
                            <label class="form-label me-3">Date</label>
                            <input type="date" name="searchDate" class="form-control" value="@ViewBag.searchDate" />
                        </div>
                    </div>
                    <div class="col-lg-2 col-md-2 col-sm-12">
                        <button type="submit" class="btn btn-outline-primary w-100"><i class="bi bi-search"></i> Filter</button>
                    </div>
            </div>
        </form>
        <a asp-action="Add" asp-controller="Order" class="btn btn-primary btn-sm"><i class="bi bi-plus-lg"></i> Add Order</a>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Action</th>
                    <th scope="col">Sales Order No</th>
                    <th scope="col">Order Date</th>
                    <th scope="col">Customer</th>
                </tr>
            </thead>
            <tbody>
                @if(Model != null)
                {
                    @foreach (App.Domain.SoOrder item in Model)
                    {
                        <tr>
                            <th scope="row">
                                <a class="btn btn-success btn-sm" asp-action="Edit" asp-controller="Order" asp-route-id="@item.SoOrderId"><i class="bi bi-pencil-square"></i></a>
                                <a class="btn btn-danger btn-sm" asp-action="Delete" asp-controller="Order" asp-route-id="@item.SoOrderId" onclick="confirm('are you sure?')"><i class="bi bi-trash"></i></a>
                            </th>
                            <td>@item.OrderNo</td>
                            <td>@item.OrderDate.ToString("dd-MMM-yyyy")</td>
                            <td>@item._ComCustomerName</td>
                        </tr>
                    }
                }
                else{
                    <tr>
                        <td colspan="4">no data</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>