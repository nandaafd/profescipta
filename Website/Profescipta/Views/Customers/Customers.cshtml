@model List<App.Domain.ComCustomer>
@{
}
<div>
    <div>
        <a asp-action="Edit" asp-controller="Customers" class="btn btn-primary">Add Customer</a>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Action</th>
                    <th scope="col">ID</th>
                    <th scope="col">Name</th>
                </tr>
            </thead>
            <tbody>
                @foreach(App.Domain.ComCustomer item in Model)
                {
                    <tr>
                        <th scope="row">
                            <a class="btn btn-success" asp-action="Edit" asp-controller="Customers" asp-route-id="@item.ComCustomerId">Edit</a>
                            <a class="btn btn-danger" asp-action="Delete" asp-controller="Customers" asp-route-id="@item.ComCustomerId">delete</a>
                        </th>
                        <td>@item.ComCustomerId</td>
                        <td>@item.CustomerName</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>